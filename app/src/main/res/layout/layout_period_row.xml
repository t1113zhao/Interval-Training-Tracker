<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/period_row_height"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:id="@+id/period_row_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/periodRowStyleMain"
        android:gravity="center_vertical|start"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/periodRowStyleMainTextSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/periodRowStyleMain"
        android:id="@+id/period_row_time_textView"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/periodRowStyleMainTextSize"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="end|center_vertical"
        />
</RelativeLayout>